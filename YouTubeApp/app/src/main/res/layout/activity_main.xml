<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.allanlopez.youtubeapp.MainActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/you"
        android:layout_width="358dp"
        android:layout_height="262dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="26dp"></com.google.android.youtube.player.YouTubePlayerView>

    <Button
        android:id="@+id/agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="addVideo"
        android:text="Agregar"
        app:layout_constraintTop_toBottomOf="@+id/uriVideo"
        tools:layout_editor_absoluteX="161dp" />

    <EditText
        android:id="@+id/uriVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="98dp"
        tools:text="Uri" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/agregar"
        tools:layout_editor_absoluteX="171dp"
        tools:text="@string/saludo" />

    <ListView
        android:id="@+id/historyList"
        android:layout_width="395dp"
        android:layout_height="137dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
